<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--form view of the Inherit Sale Order-->
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="package_names" widget="many2many_tags"
                       options="{'no_create_edit': True}"/>
            </field>
            <notebook position="inside">
                <page string="Package Info">
                    <field name="package_lines" editable="bottom">
                        <tree>
                            <field name="package_name"/>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="length"/>
                            <field name="maximum_weight"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!--form view of the Sale Package model-->
    <record id="sale_package_form" model="ir.ui.view">
        <field name="name">sale.package.form</field>
        <field name="model">sale.package</field>
        <field name="arch" type="xml">
            <form string="Packages">
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="package_name" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="package_name" required="1"/>
                            <field name="width"/>
                            <field name="length"/>
                        </group>
                        <group>
                            <field name="height"/>
                            <field name="maximum_weight"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Menu Item and Actions-->
    <record id="sale_package_tree_all" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">sale.package</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new sales packages!!</p>
        </field>
    </record>
    <menuitem id="sale_package_root"
              name="Sales Packages"
              parent="stock.menu_stock_config_settings"
              action="sale_package_tree_all"
              sequence="10"/>

</odoo>